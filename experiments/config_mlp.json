{
  "data_dir": "./data",
  "class_0": 0,
  "class_1": 1,
  "batch_size": 64,
  "val_split": 0.15,
  "flatten": false,
  
  "model_type": "mlp",
  "model_kwargs": {
    "hidden_dims": [128, 64],
    "activation": "relu"
  },
  
  "epochs": 100,
  "learning_rate": 0.001,
  "optimizer": "adam",
  "record_every": 10,
  
  "lambda_reg": 0.001,
  "c_Q": 0.5,
  "use_diagonal_hessian": true,
  "num_hessian_samples": 30,
  "projection_dim": 50,
  "num_hutchinson_samples": 50,
  
  "prior_variance": 1.0,
  "baseline_posterior_variance": 0.001,
  "delta": 0.05,
  "epsilon_stochastic": 0.0,
  
  "seeds": [42, 43, 44],
  "use_cuda": true,
  
  "_comment": "Configuration for small MLP on MNIST binary classification"
}
